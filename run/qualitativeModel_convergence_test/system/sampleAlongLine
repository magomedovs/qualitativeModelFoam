FoamFile
{
    format          ascii;
    class           dictionary;
    location        "system";
    object          sampleAlongLine;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type            sets;
libs            ("libsampling.so");

setFormat raw;

start   (-1 0 0);
end     (11 0 0);
fields  (T U Y omega);

setConfig
{
    axis    x;
}

interpolationScheme     cellPointFace; //cellPointFace cellPoint cell

sets
(
    line
    {
        type     lineFace;

        $setConfig;
        start $start;
        end   $end;
    }
);


