dimensions      [0 0 0 0 0 0 0];

// internalField   uniform 0;

internalField   #codeStream
{

    codeInclude
    #{
        #include "volFields.H"
    #};

    codeOptions
    #{
        -I$(LIB_SRC)/finiteVolume/lnInclude \
        -I$(LIB_SRC)/meshTools/lnInclude
    #};

    codeLibs
    #{
        -lmeshTools \
        -lfiniteVolume
    #};

    code
    #{
        const IOdictionary  &d      = static_cast<const IOdictionary&>(dict);
        const fvMesh        &mesh   = refCast<const fvMesh>(d.db());

        scalarField Ufield(mesh.nCells(), 0.);

        forAll(Ufield, i)
        {
            const scalar x = mesh.C()[i][0];
            
            // const scalar center = 5.;
            // const scalar p = -pow(x - center, 2) / 2.;
            // Ufield[i] = exp(p);
            
            // Ufield[i] = sin(x * 2.*constant::mathematical::pi / 10.);
            // Ufield[i] = tanh(x-5.);
            
            const scalar Uleft  = 0.0;//1.2;
            const scalar Uright = 0.0;
            if (Uright < Uleft)
            {
                Ufield[i] = Uright + (Uleft - Uright) * 0.5*(1 - tanh(x-3.));
            }
            else
            {
                Ufield[i] = Uleft + (Uright - Uleft) * 0.5*(1 + tanh(x-3.));
            }
            
            // if (x < 2)
            // {
            //     Ufield[i] = 2;
            // }
            // else
            // {
            //     Ufield[i] = 0.;
            // }
        }
        writeEntry(os, "", Ufield);
    #};
};

