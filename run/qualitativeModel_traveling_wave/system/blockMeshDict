FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters   1;

xLeft   -50;
Lx       200;
Nx       100; //100      // Number of cells in x direction: Nx * Lx

vertices
(
    ($xLeft    -0.5   -0.5)
    ($Lx       -0.5   -0.5)
    ($Lx        0.5   -0.5)
    ($xLeft     0.5   -0.5)
    ($xLeft    -0.5    0.5)
    ($Lx       -0.5    0.5)
    ($Lx        0.5    0.5)
    ($xLeft     0.5    0.5)
);


blocks
(
    hex (0 1 2 3 4 5 6 7) (#calc "round($Nx * $Lx)" 1 1) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    left
    {
        type patch;
        faces
        (
            (0 4 7 3)
        );
    }
    right
    {
        type patch;        
        faces
        (
            (2 6 5 1)
        );
    }
    top
    {
        type empty;
        faces
        (
            (1 5 4 0)
        );
    }
    bottom
    {
        type empty;
        faces
        (
            (3 7 6 2)
        );
    }
    frontAndBack
    {
        type empty;
        faces
        (
            (0 3 2 1)
            (4 5 6 7)
        );
    }
);

mergePatchPairs
(
);

